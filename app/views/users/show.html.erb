<% provide(:title, "User #{@user.id}") %>

<p id="notice"><%= notice %></p>

<p>
	<%= image_tag @user.avatar.url(:medium) %>
	<br>

	<strong>Name:</strong>
	<%= @user.name %>
	<br>

	<strong>Email:</strong>
	<%= @user.email %>
	<br>

	<% if signed_in? %>
		<%= render 'follow_form' %>
	<% end %>
</p>

<p>
	<%= pluralize(@user.micro_posts.length, 'MicroPost') %>
</p>

<p>
	<%= will_paginate @micro_posts %>

	<%= render @micro_posts %>

	<%= will_paginate @micro_posts %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
